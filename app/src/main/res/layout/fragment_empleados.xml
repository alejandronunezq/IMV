<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/et_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo" />

    <EditText
        android:id="@+id/et_departamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Departamento" />

    <EditText
        android:id="@+id/et_puesto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Puesto" />

    <EditText
        android:id="@+id/et_empresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Empresa" />

    <EditText
        android:id="@+id/et_ubicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UbicaciÃ³n" />

    <EditText
        android:id="@+id/et_celular_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Celular" />

    <EditText
        android:id="@+id/et_laptop_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Laptop" />

    <Button
        android:id="@+id/btn_guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar" />
</LinearLayout>
