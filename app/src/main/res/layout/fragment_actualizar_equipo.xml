<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ID del Equipo -->
        <TextView
            android:id="@+id/tvIdEquipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID del Equipo"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Tipo del Equipo -->
        <TextView
            android:id="@+id/tvTipoEquipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo del Equipo"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Marca -->
        <EditText
            android:id="@+id/etMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Marca" />

        <!-- Modelo -->
        <EditText
            android:id="@+id/etModelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Modelo" />

        <!-- Número de Serie -->
        <EditText
            android:id="@+id/etNumeroSerie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de Serie" />

        <!-- Dirección MAC -->
        <EditText
            android:id="@+id/etMacAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dirección MAC" />

        <!-- Precio -->
        <EditText
            android:id="@+id/etPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio" />

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
