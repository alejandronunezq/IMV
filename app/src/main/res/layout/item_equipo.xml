<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#1E1E1E"
    android:layout_marginBottom="8dp">

    <!-- ID del Equipo -->
    <TextView
        android:id="@+id/tvIdEquipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID del Equipo"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- Tipo de Equipo -->
    <TextView
        android:id="@+id/tvTipoEquipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo de Equipo"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- Marca -->
    <TextView
        android:id="@+id/tvMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marca"
        android:textColor="#B0B0B0"
        android:layout_marginBottom="4dp" />

    <!-- Modelo -->
    <TextView
        android:id="@+id/tvModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modelo"
        android:textColor="#B0B0B0"
        android:layout_marginBottom="4dp" />

    <!-- Número de Serie -->
    <TextView
        android:id="@+id/tvNumeroSerie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Número de Serie"
        android:textColor="#B0B0B0"
        android:layout_marginBottom="4dp" />

    <!-- Dirección MAC -->
    <TextView
        android:id="@+id/tvMacAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dirección MAC"
        android:textColor="#B0B0B0"
        android:layout_marginBottom="4dp" />

    <!-- Precio -->
    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precio"
        android:textColor="#B0B0B0"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvIdEmpleado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID del Empleado"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />
    <!-- Nombre del Empleado -->
    <TextView
        android:id="@+id/tvEmpleadoNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del Empleado"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- Departamento -->
    <TextView
        android:id="@+id/tvDepartamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Departamento"
        android:textColor="#B0B0B0"
        android:layout_marginBottom="4dp" />

    <!-- Puesto -->
    <TextView
        android:id="@+id/tvPuesto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Puesto"
        android:textColor="#B0B0B0"
        android:layout_marginBottom="4dp" />

    <!-- Empresa -->
    <TextView
        android:id="@+id/tvEmpresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Empresa"
        android:textColor="#B0B0B0"
        android:layout_marginBottom="4dp" />

    <!-- Ubicación -->
    <TextView
        android:id="@+id/tvUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubicación"
        android:textColor="#B0B0B0"
        android:layout_marginBottom="4dp" />

    <!-- Correo -->
    <TextView
        android:id="@+id/tvEmpleadoCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo Electrónico"
        android:textColor="#B0B0B0"
        android:layout_marginBottom="8dp" />

    <!-- Botón Actualizar -->
    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:layout_gravity="end"
        android:layout_marginTop="8dp" />

</LinearLayout>
