<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Nombre del empleado -->
    <EditText
        android:id="@+id/etEmpleadoNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Empleado"
        android:textStyle="bold"
        android:textSize="18sp" />

    <!-- Detalles del empleado -->
    <EditText
        android:id="@+id/etDepartamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Departamento" />

    <EditText
        android:id="@+id/etPuesto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Puesto" />

    <EditText
        android:id="@+id/etEmpresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Empresa" />

    <EditText
        android:id="@+id/etUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ubicación" />

    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo" />

    <!-- Detalles de Laptop -->
    <EditText
        android:id="@+id/etLaptopMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Marca de la Laptop" />

    <EditText
        android:id="@+id/etLaptopModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modelo de la Laptop" />

    <EditText
        android:id="@+id/etLaptopNumeroSerie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de Serie" />

    <EditText
        android:id="@+id/etLaptopMac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MAC de la Laptop" />

    <EditText
        android:id="@+id/etLaptopProcesador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Procesador" />

    <EditText
        android:id="@+id/etLaptopRam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RAM" />

    <EditText
        android:id="@+id/etLaptopAlmacenamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Almacenamiento" />

    <!-- Detalles de Celular -->
    <EditText
        android:id="@+id/etCelularMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Marca del Celular" />

    <EditText
        android:id="@+id/etCelularModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modelo del Celular" />

    <EditText
        android:id="@+id/etCelularNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número" />

    <EditText
        android:id="@+id/etCelularNumeroSerie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de Serie" />

    <EditText
        android:id="@+id/etCelularImei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IMEI" />

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:backgroundTint="@color/white"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:backgroundTint="@color/white"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>
